<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.effect.SepiaTone?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<ScrollPane pannable="true" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="View.MainMenuPage">
   <content>
      <AnchorPane prefHeight="850.0" prefWidth="1300.0">
         <children>
            <ImageView fitHeight="850.0" fitWidth="1300.0">
               <image>
                  <Image url="@../mainMenuPage.png" />
               </image>
            </ImageView>
            <Button fx:id="profile" layoutX="268.0" layoutY="626.0" mnemonicParsing="false" onAction="#profile" text="profile">
               <font>
                  <Font name="Eras Light ITC" size="25.0" />
               </font>
               <effect>
                  <SepiaTone />
               </effect>
            </Button>
            <Button fx:id="deckMenu" layoutX="398.0" layoutY="626.0" mnemonicParsing="false" onAction="#deckMenu" text="deck menu">
               <font>
                  <Font name="Eras Light ITC" size="25.0" />
               </font>
               <effect>
                  <SepiaTone />
               </effect>
            </Button>
            <Button fx:id="newGame" layoutX="584.0" layoutY="626.0" mnemonicParsing="false" onAction="#newGame" text="new game" textFill="#030303">
               <font>
                  <Font name="Eras Light ITC" size="25.0" />
               </font>
               <effect>
                  <SepiaTone />
               </effect>
            </Button>
            <Button fx:id="scoreboard" layoutX="762.0" layoutY="626.0" mnemonicParsing="false" onAction="#scoreBoard" text="scoreboard">
               <font>
                  <Font name="Eras Light ITC" size="25.0" />
               </font>
               <effect>
                  <SepiaTone />
               </effect>
            </Button>
            <Button fx:id="shop" layoutX="956.0" layoutY="626.0" mnemonicParsing="false" onAction="#shop" text="shop">
               <font>
                  <Font name="Eras Light ITC" size="25.0" />
               </font>
               <effect>
                  <SepiaTone />
               </effect>
            </Button>
            <Button fx:id="logout" layoutX="50.0" layoutY="787.0" mnemonicParsing="false" onAction="#logout" text="logout">
               <effect>
                  <SepiaTone />
               </effect>
               <font>
                  <Font name="Eras Light ITC" size="15.0" />
               </font></Button>
            <Button fx:id="chatRoom" layoutX="1111.0" layoutY="172.0" mnemonicParsing="false" onAction="#chatRoom" text="chat room">
               <font>
                  <Font name="Eras Light ITC" size="25.0" />
               </font>
               <effect>
                  <SepiaTone />
               </effect>
            </Button>
         </children>
      </AnchorPane>
   </content>
</ScrollPane>
