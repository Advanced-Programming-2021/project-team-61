<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.effect.SepiaTone?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.shape.Sphere?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<ScrollPane pannable="true" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="View.CreateNewGamePage">
   <content>
      <AnchorPane prefHeight="850.0" prefWidth="1300.0">
         <children>
            <ImageView fitHeight="850.0" fitWidth="1387.0">
               <image>
                  <Image url="@../createNewGame.png" />
               </image>
            </ImageView>
            <Sphere layoutX="477.0" layoutY="723.0" radius="50" />
            <Text fx:id="round" fill="WHITE" layoutX="321.0" layoutY="735.0" strokeType="OUTSIDE" strokeWidth="0.0" text="round">
               <font>
                  <Font name="Eras Light ITC" size="30.0" />
               </font>
            </Text>
            <Text fx:id="numOfRound" layoutX="470.0" layoutY="733.0" strokeType="OUTSIDE" strokeWidth="0.0" text="1">
               <font>
                  <Font size="25.0" />
               </font>
            </Text>
            <Button fx:id="positive" layoutX="540.0" layoutY="691.0" mnemonicParsing="false" onAction="#positive" text="+">
               <effect>
                  <SepiaTone />
               </effect></Button>
            <Button fx:id="negative" layoutX="540.0" layoutY="724.0" mnemonicParsing="false" onAction="#negative" prefHeight="19.0" prefWidth="31.0" text="-">
               <font>
                  <Font size="17.0" />
               </font>
               <effect>
                  <SepiaTone />
               </effect>
            </Button>
            <Button fx:id="sendRequest" layoutX="752.0" layoutY="667.0" mnemonicParsing="false" onAction="#sendRequest" text="send request to start new game">
               <font>
                  <Font name="Eras Light ITC" size="25.0" />
               </font>
               <effect>
                  <SepiaTone />
               </effect>
            </Button>
            <Button fx:id="back" layoutX="89.0" layoutY="773.0" mnemonicParsing="false" onAction="#back" text="back">
               <effect>
                  <SepiaTone />
               </effect>
               <font>
                  <Font name="Eras Light ITC" size="20.0" />
               </font></Button>
            <Button fx:id="cancelRequest" layoutX="752.0" layoutY="725.0" mnemonicParsing="false" onAction="#cancelRequest" prefHeight="49.0" prefWidth="365.0" text="cancel the request">
               <font>
                  <Font name="Eras Light ITC" size="25.0" />
               </font>
               <effect>
                  <SepiaTone />
               </effect>
            </Button>
         </children>
      </AnchorPane>
   </content>
</ScrollPane>
