<AnchorPane prefHeight="850.0" prefWidth="1300.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="View.CreateNewGamePage">
   <children>
      <ImageView fitHeight="850.0" fitWidth="1300.0">
         <image>
            <Image url="@../createNewGame.png" />
         </image>
      </ImageView>
      <Sphere layoutX="420.0" layoutY="723.0" radius="50" />
      <Text fx:id="round" fill="WHITE" layoutX="264.0" layoutY="735.0" strokeType="OUTSIDE" strokeWidth="0.0" text="round">
         <font>
            <Font name="System Bold" size="30.0" />
         </font>
      </Text>
      <Text fx:id="numOfRound" layoutX="413.0" layoutY="733.0" strokeType="OUTSIDE" strokeWidth="0.0" text="1">
         <font>
            <Font size="25.0" />
         </font>
      </Text>
      <Button fx:id="positive" layoutX="483.0" layoutY="691.0" mnemonicParsing="false" onAction="#positive" text="+" />
      <Button fx:id="negative" layoutX="483.0" layoutY="724.0" mnemonicParsing="false" onAction="#negative" prefHeight="19.0" prefWidth="31.0" text="-">
         <font>
            <Font size="17.0" />
         </font>
      </Button>
      <TextField fx:id="username" layoutX="712.0" layoutY="697.0" promptText="rival username :">
         <font>
            <Font size="25.0" />
         </font>
      </TextField>
      <Button fx:id="start" layoutX="598.0" layoutY="591.0" mnemonicParsing="false" onAction="#start" text="START">
         <font>
            <Font size="25.0" />
         </font>
      </Button>
   </children>
